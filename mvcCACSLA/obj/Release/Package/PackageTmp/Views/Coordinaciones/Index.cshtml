@model PagedList.IPagedList<mvcCACSLA.Models.Coordinaciones>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Mantenimiento | Coordinaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Listado de Coordinaciones</h2>

<p>
    @Html.ActionLink("Crear Nueva", "Create")
     @Html.ActionLink("Reporte", "ImprimirRpt")
</p>
<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>
                Descripcion
            </th>
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model)
{
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdCoordinacion }) |

                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdCoordinacion })
               
            </td>
        </tr>
    </tbody>
}

</table>

Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))